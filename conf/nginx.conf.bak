upstream fhir {
    server fhir:8080;
}

server {
    listen 80;
    server_name localhost;

    # ACME Challenge for Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # For testing, serve HTTP directly (comment out redirect when SSL is ready)
    location / {
        proxy_pass http://fhir;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # Increase client max body size to handle large FHIR resources
        client_max_body_size 10M;

        # Proxy settings
        proxy_connect_timeout       300;
        proxy_send_timeout          300;
        proxy_read_timeout          300;
        send_timeout                300;

        # Buffer settings for better performance
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }
    
    # Uncomment below to redirect to HTTPS after SSL setup
    # location / {
    #     return 301 https://$host$request_uri;
    # }
}

